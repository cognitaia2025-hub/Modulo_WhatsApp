# Podoskin WhatsApp Service - Configuración
# ==========================================

# URL del backend Python (donde está el agente LangGraph)
BACKEND_URL=http://localhost:8000

# Puerto HTTP para el servidor de status/control
HTTP_PORT=3001

# Ruta para guardar la sesión de WhatsApp
SESSION_PATH=./session

# Timeout para llamadas al backend (ms)
API_TIMEOUT=30000

# Nivel de logs (debug, info, warn, error)
LOG_LEVEL=info

# Lista de números permitidos (vacío = todos)
# Formato: código país + número, separados por coma
# Ejemplo: ALLOWED_NUMBERS=521234567890,521098765432
ALLOWED_NUMBERS=
